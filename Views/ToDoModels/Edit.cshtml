@model Crud_test_project.Models.ToDoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ToDoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
